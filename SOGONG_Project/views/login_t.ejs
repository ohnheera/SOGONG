<!DOCTYPE html>
<html>
<head>
  <script src="/javascripts/jquery-3.3.1.min.js"></script>
  <title><%=title%></title>
  <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
  <h1><%=title%></h1>
  <form action="/login" method="post" onsubmit="return onWriteSubmit()">
    <table>
        <td colspan="2">
          <button><a href="/">돌아가기</a></button>
          <button><a href="/login/logout">로그아웃</a></button>
          <button><a href="/login/cancel">탈퇴</a></button>
        </td>
      </tr>
    </table>
  </form>

  <script>
  function onWriteSubmit()
  {
    if($("#passwd").val().trim()=="")
    {
      var msg = "패스워드를 입력해 주세요";
      $("#passwd").val("");
      $("#passwd").focus();
      alert(msg);
      return false;
    }
  }
  </script>
</body>
</html>
